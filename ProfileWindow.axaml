<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="magazine_music.ProfileWindow"
		x:CompileBindings="False"
		WindowStartupLocation="CenterScreen"
		WindowState="Maximized"
        Title="ProfileWindow">
	<Grid ColumnDefinitions=".1* .4* .1*" RowDefinitions=".1* .5* .1*">
		<StackPanel Grid.Column="1" Grid.Row="1" Margin="20" Spacing="10">
			<TextBlock Text="Профиль пользователя" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

			<TextBlock Text="{Binding UserFirstName}" FontSize="16"/>
			<TextBlock Text="{Binding UserLastname}" FontSize="16"/>
			<TextBlock Text="{Binding UserEmail}" FontSize="16"/>
			<TextBlock Text="{Binding UserBirthday}" FontSize="16"/>
			

			<Button Content="Выйти" Click="Logout_Click" Background="Transparent" BorderBrush="Gray" HorizontalAlignment="Center"/>
		</StackPanel>
		<Button Grid.Column="0" HorizontalAlignment="Center" Content="Назад" Background="Transparent" BorderBrush="Gray" Click="Button_Click"/>
	</Grid>
</Window>
