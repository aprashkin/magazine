<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="magazine_music.ProductDetailsWindow"
        Width="600" Height="500"
        Title="Детали товара"
		WindowStartupLocation="CenterScreen"
		WindowState="Maximized">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<StackPanel Margin="20" Spacing="15">
			<Button Name="BackButton"
                Content="Назад"
                Width="100"
                Height="40"
                Background="#4CAF50"
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Click="BackButton_Click"
                Margin="10,10,0,0" />
			
			<TextBlock Name="ProductNameText"
                       FontSize="24"
                       FontWeight="Bold"
                       TextWrapping="Wrap" />

			<TextBlock Name="ProductTypeText"
			  FontSize="16"
			  FontWeight="Bold"
			  Foreground="#2a5d9f" />

			<Image Name="ProductImage"
                   Height="200"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   Margin="0,10" />

			<TextBlock Name="ProductDescriptionText"
                       TextWrapping="Wrap"
                       FontSize="16" />

			<TextBlock Name="ProductPriceText"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="DarkGreen"
                       Margin="0,10,0,0" />
			<Button Content="Добавить в корзину"
        Name="AddToCartButton"
        Width="200"
        Height="40"
        Background="#4CAF50"
        Foreground="White"
        FontSize="16"
        FontWeight="Bold"
        HorizontalAlignment="Left"
        Click="Button_Click"
        Margin="0,10,0,0"
        CornerRadius="8"/>

			<TextBlock Text="Дополнительные изображения:"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,20,0,5" />

			<ItemsControl Name="ImagesList">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<StackPanel Orientation="Horizontal" />
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Border Width="100" Height="100" Margin="5"
                                BorderBrush="Gray" BorderThickness="1"
                                CornerRadius="5">
							<Image Source="{Binding}" Stretch="UniformToFill" Tapped="Image_Tapped"/>
						</Border>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</StackPanel>
	</ScrollViewer>
</Window>
